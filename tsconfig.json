{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "outDir": "./lib",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "lib": [
      "es6",
      "es2015",
      "es2016",
      "es2017"
    ],
    "importHelpers": false,
    "newLine": "LF",
    "skipLibCheck": true,

    "noEmitHelpers": true,
    "noImplicitReturns": true,
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitAny": false,
    "noUnusedParameters": true
  },
  "include": [
    "src/**/*.ts",
    "global.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
